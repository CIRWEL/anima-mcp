# Anima Configuration - Lumen's Nervous System Calibration
# Copy this to anima_config.yaml and adjust for your environment

nervous_system:
  # Thermal ranges (Celsius)
  cpu_temp_min: 40.0      # Below this = cold
  cpu_temp_max: 80.0      # Above this = hot
  
  ambient_temp_min: 15.0  # Below this = cold environment
  ambient_temp_max: 35.0  # Above this = hot environment
  
  # Ideal values (deviation from these = instability)
  humidity_ideal: 45.0    # Ideal humidity (%)
  pressure_ideal: 1013.25 # Sea level standard (hPa)
                          # Colorado ~5400ft: ~833 hPa
                          # Adjust for your elevation
  
  # Light perception (lux)
  light_min_lux: 1.0
  light_max_lux: 1000.0
  
  # Neural signal weights
  neural_weight: 0.3
  physical_weight: 0.7
  
  # Component weights for anima dimensions
  warmth_weights:
    cpu_temp: 0.3
    cpu_usage: 0.25
    ambient_temp: 0.25
    neural: 0.2
  
  clarity_weights:
    light: 0.4
    sensor_coverage: 0.3
    neural: 0.3
  
  stability_weights:
    humidity_dev: 0.20
    memory: 0.25
    missing_sensors: 0.15
    pressure_dev: 0.20  # Pressure sensor contribution
    neural: 0.20
  
  presence_weights:
    disk: 0.25
    memory: 0.3
    cpu: 0.25
    neural: 0.2

display:
  led_brightness: 0.3
  update_interval: 2.0  # seconds
  breathing_enabled: true
  breathing_cycle: 8.0  # seconds
  breathing_variation: 0.1  # Â±10%
  # Enhanced LED features
  pulsing_enabled: true  # Fast pulsing for low clarity/instability
  color_transitions_enabled: true  # Smooth color changes
  pattern_mode: "standard"  # standard, minimal, expressive, alert
  auto_brightness_enabled: true  # Auto-adjust based on ambient light
  auto_brightness_min: 0.15  # Minimum brightness (bright rooms)
  auto_brightness_max: 0.5   # Maximum brightness (dark rooms)
  pulsing_threshold_clarity: 0.4  # Clarity threshold for pulsing
  pulsing_threshold_stability: 0.4  # Stability threshold for pulsing
